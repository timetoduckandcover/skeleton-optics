{% paginate collection.products by 4 %}
<div id="shop">
  {% if collection.image %}
    <div class="full-page-banner">
      {% capture hero %}{{ collection.image  | img_url: 'master' }}{% endcapture %}
      <img src="{{hero}}" alt="Shop Hero" class="img-full" />
      <div class="caption">
        <h1 class="uppercase">Shop</h1>
        <span class="uppercase">{{ settings.home_hero-subtitle }}</span>
      </div>
    </div>
  {% endif %}
  <div class="wrapper">
    <div class="row">
      <div class="col-xs-12">
        <div class="row collection-list">
          {% if collection.description.size > 0 %}
          <div class="rte">
            {{ collection.description }}
          </div>
          {% endif %}
            {% for product in collection.products %}
              <div class="col-xs-12 col-sm-6 col-md-3">
                {% include 'product-grid-item' %}
              </div>
            {% else %}
            <p>There are no products in this view.</p>
            {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endpaginate %}

