/*------- Common Helpers --------*/
.hide, .hidden { display: none;}
.padding {padding: 20px;}
.text-left {text-align: left;}
.text-center {text-align:center;}
.text-right {text-align: left;
@include breakpoint(small) {
  text-align: right;
  }}
.middle {line-height: 48px;}
.pull-left {float: left;}
.pull-right {float: right;}
.mtb {margin: 50px 0;}
.mbs {margin-bottom: $baseline/2}
.mb {margin-bottom: $baseline;}
.mbb {margin-bottom: $baseline*3}
.mt {margin-top: $baseline;}
.mtt {margin-top: $baseline*2;}
.uppercase {text-transform:uppercase;}
.section-padding {padding: 40px 0;}
.center {
    position: absolute;
    left: 50%;
    top: 50%;
    -moz-transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
.two-cols {
  @include breakpoint(medium) {
    -moz-column-count: 2;
    -moz-column-gap: 3%;
    -webkit-column-count: 2;
    -webkit-column-gap: 3%;
  }
}
.img-full {
  width: 100%;
  height: auto;
  display: block;
}

/*------- Typography --------*/
h1,h2,h3,h4,h5,h6,p {
  margin-bottom: 12px;
}
h1 {
  @include font(34);
}
h2 {
  @include font(28);
}
h3 {
  @include font(22);
}
h4 {
  @include font(18);
}
h5, h6 {
  @include font(16);
}
span, strong, p, a, em {
  @include font(14);
}
small {
  @include font(12);
  padding: 0 135px;
  display: block;
}
strong { font-weight: bold; }
em { font-style: italic; }

/*------- Links --------*/
a {
  text-decoration: underline;
  @include transition;
}


/*------- Lists --------*/
ul { list-style: none;}
ul li { display: block;}
nav ul li { display: inline-block; }

/*------- Forms --------*/
input {
  text-decoration: none;
  @include transition;
  &:focus {outline: none;}
  &:not([type=submit]) {
    width: 100%;
    max-width: 200px;
    border: 1px solid $col-grey;
    color: $col-black;
    padding: 7px;
    @include font(16);
  }
  &[type="submit"] {
    border: 1px solid $col-grey;
    background: $col-grey;
    color: $col-white;
    width: 143px;
    padding: 7px;
    display: block;
    @include font(16);
    &:hover { background: $col-links-primary; border: 1px solid $col-links-primary; cursor: pointer;}
        &.add-to-cart {
          text-transform: uppercase;
          width: 100%;
          max-width: 100%;
          margin: $baseline 0;
          background: $col-orange;
          border: 1px solid $col-orange;
        }
        &.mailchimp {
          margin-left: $baseline/2;
        }
  }
}
textarea {
  @extend input;
  resize: none;
  height: 240px;
}

.inline-form {
  .text, .submit {display: block;}
  .text {width: 100%;}
  .submit {width: 60%; input {margin-left: 0}}
  @include breakpoint(medium) {
    .text, .submit {float: left;}
    .text {width: 70%;}
    .submit {width: 30%;}
  }
}

/* PAGINATION */
.pagination {
    float: right;
    text-transform: uppercase;
    li {
      display: inline-block;
      &.prev:after,
      &.next:before {
        content: '|';
        padding: 0  $baseline/2;
      }
      &.spacing {
        padding: 0 10px;
      }
      &.active {
        color: $col-grey;
      }
    }
}

/* BREADCRUMBS */
.breadcrumbs {
  text-transform:uppercase;
  a {
      &:after {
        content: '|';
            padding: 0  $baseline/2;
      }
      &:last-child:after {
        content: '';
      }
    }

}


/* SLIDER */
.flex-direction-nav a.flex-prev  { background-image:url({{ 'leftarrow.png' | asset_url }}); display: block; text-indent: -999999px}
.flex-direction-nav a.flex-next  { background-image:url({{ 'rightarrow.png' | asset_url }}); display:block; text-indent: 999999px}

