@font-face {
  font-family: 'Lato Black';
  src: url(Lato-Black.ttf);
}

/*------- Colors --------*/
$col-grey: #7e898b;
$col-black: #1b1e23;
$col-turq: #8ee2ec;
$col-lightgrey: #f6f7f8;
$col-darkgrey: #404040;
$col-bordergrey: #eaeaea;
$col-beige: #fddea7;
$col-white: #fff;
$col-orange: #ee6321;
$col-yellow: #f79323;
$col-red: #9F0303;
$col-blue: #6e9cc8;
$col-body: #333;
$col-links-primary: #6e9cc8;
$col-links-secondary: #33B5A4;

/* Baseline */
$baseline: 20px;

@mixin breakpoint($class) {
  @if $class == small { @media (min-width: 460px) { @content; } }
  @else if $class == medium { @media (min-width: 767px) { @content; } }
  @else if $class == large { @media (min-width: 1200px) { @content; } }
}

@mixin transition($transition: all .2s ease-in-out) {
  $prefixes:  ("-webkit-", "-ms-", "-o-",  "");
  @each $prefix in $prefixes {
   #{$prefix}transition: $transition;
  }
}
@mixin font($size: 1.6) {
  font-size: ($size) + px;
  font-size: ($size/16) + em;
  line-height: ($size * 1.4) + px;
};
@mixin centre($axis: "both") {
	position:absolute;
	@if $axis == "y"{
		top:50%;
    transform: translate(0, -50%);
	}
	@if $axis == "x"{
		left:50%;
		transform: translate(-50%, 0);
	}
	@if $axis == "both"{
		top:50%;
		left:50%;
		transform: translate(-50%, -50%);
	}
}

/*------- Necessary Styles --------*/
*, *:before, *:after {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.block {display: block;}
.cf {
  zoom: 1;
  &:after {
    content: "";
      display: table;
      clear: both;
  }
}
.browsehappy {
  width: 100%;
  background: red;
  padding: 15px;
    color: red;
}

/*------- Main Setup --------*/
::selection { }
html, body { height: 100%;}
html { font-size: 100%;}
body {
  color: $col-body;
  line-height: 1.6;
}
body, input, textarea, select, button {
  font-family: 'Lato', 'Arial', 'Verdana', sans-serif;
  @include font(16);
  font-weight: 400;
}
.wrapper {
  width: 100%;
  padding: 0 20px;
  max-width: 1100px;
  margin: 0 auto;
}


/*------- Common Helpers --------*/
.hide, .hidden { display: none;}
.padding {padding: 20px;}
.text-left {text-align: left;}
.text-center {text-align:center;}
.text-right {text-align: left;
@include breakpoint(small) {
  text-align: right;
  }}
.middle {line-height: 48px;}
.pull-left {float: left;}
.pull-right {float: right;}
.mtb {margin: 50px 0;}
.mbs {margin-bottom: $baseline/2}
.mb {margin-bottom: $baseline;}
.mbb {margin-bottom: $baseline*3}
.mt {margin-top: $baseline;}
.mtt {margin-top: $baseline*2;}
.uppercase {text-transform:uppercase;}
.section-padding {padding: 40px 0;}
.center {
    position: absolute;
    left: 50%;
    top: 50%;
    -moz-transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
.two-cols {
  @include breakpoint(medium) {
    -moz-column-count: 2;
    -moz-column-gap: 3%;
    -webkit-column-count: 2;
    -webkit-column-gap: 3%;
  }
}
.img-full {
  width: 100%;
  height: auto;
  display: block;
}
.push-header {
  padding-top: 100px;
}
.sprite {
  background-image: url(sprite.png);
  background-repeat: no-repeat;
}
.disabled {
  opacity: .5;
}
.disable-click {
  pointer-events: none;
}

/*------- Typography --------*/
.lato-black {
  font-family: 'Lato Black', 'Lato', arial, sans-serif;
}
.lato-thin {
  font-family: 'Lato', 'Arial', 'Verdana', sans-serif;
  font-weight: 100;
}
.lato-regular {
  font-family: 'Lato', 'Arial', 'Verdana', sans-serif;
  font-weight: 400;
}
h1,h2,h3,h4,h5,h6 {
  margin-bottom: 12px;
  @extend .lato-black;
}
h1 {
  @include font(34);
}
h2 {
  @include font(28);
}
h3 {
  @include font(22);
}
h4 {
  @include font(18);
}
h5, h6 {
  @include font(16);
}
span, strong, p, a, em {
  @include font(14);
}
small {
  @include font(12);
  padding: 0 135px;
  display: block;
}
strong { font-weight: bold; }
em { font-style: italic; }
.has-line {
  position: relative;
  padding-bottom: 14px;
  margin-bottom: 14px;
  &:after {
    content: '';
    @include centre(x);
    bottom: 0;
    width: 70px;
    height: 5px;
    background: $col-black;
  }
}
p {
  margin-bottom: 12px;
}

/*------- Links --------*/
a {
  color: $col-blue;
  text-decoration: underline;
  @include transition;
}


/*------- Lists --------*/
ul { list-style: none;}
ul li { display: block;}
nav > ul > li { display: inline-block; }

/*------- Forms --------*/
label {
  display: block;
  margin-bottom: 4px;
  color: $col-grey;
  text-transform: uppercase;
}
input {
  text-decoration: none;
  @include transition;
  &:focus {outline: none;}
  &:not([type=submit]) {
    width: 100%;
    max-width: 400px;
    border: 1px solid $col-grey;
    color: $col-black;
    border-radius: 2px;
    padding: 7px;
    @include font(16);
  }
  &[type="submit"] {
    border: none;
    border-radius: 5px;
    background: $col-orange;
    color: $col-white;
    padding: 7px 30px;
    display: inline-block;
    text-transform: uppercase;
    @include font(15);
    line-height: 24px;
    &:hover { background: $col-links-primary; cursor: pointer;}
    &.add-to-cart {
      text-transform: uppercase;
      width: 100%;
      max-width: 100%;
      margin: $baseline 0;
      background: $col-orange;
      border: 1px solid $col-orange;
    }
  }
}
textarea {
  @extend input;
  resize: none;
  height: 240px;
}
select {
  -webkit-appearance:none;
  -moz-appearance:none;
  appearance:none;
  border-radius: 0;
  background: $col-white;
  border: 1px solid $col-bordergrey;
  padding: 6px 12px;
}

.inline-form {
  .text, .submit {display: block;}
  .text {
    width: 100%;
    margin-bottom: 12px;
    input {
      color: $col-grey;
    }
  }
  .submit {
    width: 100%;
    input {
      margin-left: 0
    }
  }
  @include breakpoint(medium) {
    .text {
      float: left;
      width: calc(100% - 130px);
      margin-bottom: 0;
    }
    .submit {
      float: right;
      width: 120px;
      input {
        width: 120px;
      }
    }
  }
}

/* PAGINATION */
.pagination {
    float: right;
    text-transform: uppercase;
    li {
      display: inline-block;
      &.prev:after,
      &.next:before {
        content: '|';
        padding: 0  $baseline/2;
      }
      &.spacing {
        padding: 0 10px;
      }
      &.active {
        color: $col-grey;
      }
    }
}

/* BREADCRUMBS */
.breadcrumbs {
  text-transform:uppercase;
  a {
    &:after {
      content: '|';
          padding: 0  $baseline/2;
    }
    &:last-child:after {
      content: '';
    }
  }
}

.full-page-banner {
  position: relative;
  .caption {
    text-align: center;
    @include centre;
    h1, span {
      color: $col-white;
      //@extend .lato-black;
    }
    h1 {
      @include font(70);
      position: relative;
      padding-bottom: 20px;
      margin-bottom: 20px;
      &:after {
        content: '';
        width: 80px;
        height: 5px;
        background: $col-white;
        @include centre(x);
        bottom: 0;
      }
    }
    span {
      @include font(44);
    }
  }
}


/* SLIDER */
.flex-direction-nav a.flex-prev  { background-image:url({{ 'leftarrow.png' | asset_url }}); display: block; text-indent: -999999px}
.flex-direction-nav a.flex-next  { background-image:url({{ 'rightarrow.png' | asset_url }}); display:block; text-indent: 999999px}

/* HEADER */
header.global-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,.6);
  z-index: 9999;
  .site-logo {
    display: block;
    width: 156px;
    float: left;
    margin-right: 24px;
    padding-top: 23px;
  }
  nav {
    float: left;
  }
  #header_meta {
    float: right;
  }
  .nav-links {
    & > li {
      display: inline-block;
      margin-right: 20px;
      position: relative;
      &.active a {
        color: $col-links-primary;
      }
      & > a {
        text-transform: uppercase;
        text-decoration: none;
        display: block;
        color: $col-white;
        line-height: 70px;
        &:hover {
          color: $col-links-primary;
        }
      }
      &:hover {
        .sub-nav {
          display: block;
        }
      }
      .sub-nav {
        padding: 4px 12px 12px 12px;
        display: none;
        position: absolute;
        background: rgba(0,0,0,.6);
        top: 70px;
        left: -12px;
        min-width: 200px;
        li {
          a {
            color: $col-white;
            text-decoration: none;
            text-transform: uppercase;
            line-height: 20px;
            &:hover {
              color: $col-links-primary;
            }
          }
        }
      }
    }
  }
}


/* CURRENCIES */
#currencies {
  position: relative;
  .currency-header {
    color: $col-orange;
    text-transform: uppercase;
  }
  .currencies-hide {
    display: block;
    background: $col-white;
    padding: 6px;
    z-index: 999999;
    span:hover {
      cursor: pointer;
    }
    @include breakpoint(medium) {
      display: none;
      position: absolute;
    }
  }
  &:hover .currencies-hide {
    display: block;
  }
  .currency-select {
    &.active {
      color: $col-orange;
    }
  }
}



