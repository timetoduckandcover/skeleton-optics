@font-face {
  font-family: 'Lato Black';
  src: url(Lato-Black.ttf);
}

/*------- Colors --------*/
$col-grey: #7e898b;
$col-black: #1b1e23;
$col-lightblack: #7e898b;
$col-turq: #8ee2ec;
$col-lightgrey: #f6f7f8;
$col-darkgrey: #404040;
$col-bordergrey: #eaeaea;
$col-beige: #fddea7;
$col-white: #fff;
$col-orange: #ee6321;
$col-yellow: #f79323;
$col-red: #9F0303;
$col-blue: #6e9cc8;
$col-body: #333;
$col-links-primary: #f79323;
$col-links-secondary: #33B5A4;

/* Baseline */
$baseline: 20px;

@mixin breakpoint($class) {
  @if $class == small { @media (min-width: 460px) { @content; } }
  @else if $class == medium { @media (min-width: 767px) { @content; } }
  @else if $class == large { @media (min-width: 1200px) { @content; } }
}

@mixin transition($transition: all .2s ease-in-out) {
  $prefixes:  ("-webkit-", "-ms-", "-o-",  "");
  @each $prefix in $prefixes {
   #{$prefix}transition: $transition;
  }
}
@mixin font($size: 1.6) {
  font-size: ($size) + px;
  font-size: ($size/16) + em;
  line-height: ($size * 1.4) + px;
};
@mixin centre($axis: "both") {
	position:absolute;
	@if $axis == "y"{
		top:50%;
    transform: translate(0, -50%);
	}
	@if $axis == "x"{
		left:50%;
		transform: translate(-50%, 0);
	}
	@if $axis == "both"{
		top:50%;
		left:50%;
		transform: translate(-50%, -50%);
	}
}

/*------- Necessary Styles --------*/
*, *:before, *:after {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.block {display: block;}
.cf {
  zoom: 1;
  &:after {
    content: "";
      display: table;
      clear: both;
  }
}
.browsehappy {
  width: 100%;
  background: red;
  padding: 15px;
    color: red;
}

/*------- Main Setup --------*/
html, body { height: 100%;}
html {
  font-size: 90%;
  @include breakpoint(medium) {
    font-size: 100%;
  }
}
body {
  color: $col-body;
  line-height: 1.6;
}
body, input, textarea, select, button {
  font-family: 'Lato', 'Arial', 'Verdana', sans-serif;
  @include font(16);
  font-weight: 400;
}
.wrapper {
  width: 100%;
  padding: 0 20px;
  max-width: 1140px;
  margin: 0 auto;
  @include breakpoint(medium) {
    padding: 0 40px;
  }
}


/*------- Common Helpers --------*/
.hide, .hidden { display: none;}
.padding {padding: 20px;}
.text-left {text-align: left;}
.text-center {text-align:center;}
.text-right {text-align: left;
@include breakpoint(small) {
  text-align: right;
  }}
.middle {line-height: 48px;}
.pull-left {float: left;}
.pull-right {float: right;}
.mtb {margin: 50px 0;}
.mbs {margin-bottom: $baseline/2}
.mb {margin-bottom: $baseline;}
.mbb {margin-bottom: $baseline*3}
.mt {margin-top: $baseline;}
.mtt {margin-top: $baseline*2;}
.uppercase {text-transform:uppercase;}
.section-padding {padding: 60px 0 40px 0;}
.center {
    position: absolute;
    left: 50%;
    top: 50%;
    -moz-transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
.two-cols {
  @include breakpoint(medium) {
    -moz-column-count: 2;
    -moz-column-gap: 3%;
    -webkit-column-count: 2;
    -webkit-column-gap: 3%;
  }
}
.img-full {
  width: 100%;
  height: auto;
  display: block;
}
.push-header {
  padding-top: 20px;
  @include breakpoint(large) {
    padding-top: 100px;
  }
}
.sprite {
  background-image: url(sprite.png);
  background-repeat: no-repeat;
}
.disabled {
  opacity: .5;
}
.disable-click {
  pointer-events: none;
}
.form-with-spacing {
  li {
    margin-bottom: 12px;
  }
}

/*------- Typography --------*/
.lato-black {
  font-family: 'Lato Black', 'Lato', arial, sans-serif;
}
.lato-thin {
  font-family: 'Lato', 'Arial', 'Verdana', sans-serif;
  font-weight: 100;
}
.lato-regular {
  font-family: 'Lato', 'Arial', 'Verdana', sans-serif;
  font-weight: 400;
}
h1,h2,h3,h4,h5,h6 {
  margin-bottom: 12px;
  @extend .lato-black;
}
h1 {
  @include font(34);
}
h2 {
  @include font(28);
}
h3 {
  @include font(22);
}
h4 {
  @include font(18);
}
h5  {
  @include font(16);
}
h6 {
  @include font(14);
}
span, strong, p, a, em {
  @include font(14);
}
small {
  @include font(12);
  padding: 0 135px;
  display: block;
}
strong { font-weight: bold; }
em { font-style: italic; }
.has-line {
  position: relative;
  padding-bottom: 14px;
  margin-bottom: 14px;
  &:after {
    content: '';
    @include centre(x);
    bottom: 0;
    width: 70px;
    height: 5px;
    background: $col-black;
  }
}
p {
  margin-bottom: 12px;
}

/*------- Links --------*/
a {
  color: $col-blue;
  text-decoration: underline;
  @include transition;
}


/*------- Lists --------*/
ul { list-style: none;}
ul li { display: block;}
nav > ul > li { display: inline-block; }

/*------- Forms --------*/
label {
  display: block;
  margin-bottom: 4px;
  color: $col-grey;
  text-transform: uppercase;
}
input {
  text-decoration: none;
  @include transition;
  &:focus {outline: none;}
  &:not([type=submit]):not([type=checkbox]) {
    width: 100%;
    max-width: 400px;
    border: 1px solid $col-bordergrey;
    color: $col-black;
    border-radius: 2px;
    padding: 7px;
    @include font(16);
  }
  &[type="submit"] {
    border: none;
    border-radius: 5px;
    background: $col-orange;
    color: $col-white;
    padding: 7px 30px;
    display: inline-block;
    text-transform: uppercase;
    @include font(15);
    line-height: 24px;
    &:hover { background: $col-links-primary; cursor: pointer;}
    &.add-to-cart {
      text-transform: uppercase;
      width: 100%;
      max-width: 100%;
      margin: $baseline 0;
      background: $col-orange;
      border: 1px solid $col-orange;
    }
  }
}
textarea {
  @extend input;
  resize: none;
  height: 240px;
}
select {
  -webkit-appearance:none;
  -moz-appearance:none;
  appearance:none;
  border-radius: 0;
  background: $col-white;
  border: 1px solid $col-bordergrey;
  padding: 6px 12px;
}

.btn {
  background: $col-yellow;
  border-radius: 20px;
  padding: 0 40px;
  color: $col-white;
  text-decoration: none;
  display: inline-block;
  text-transform: uppercase;
  @include font(13);
  line-height: 34px;
}

.product-qty-selector {
  @extend .cf;
  margin-right: 12px;
  text-align: center;
  a, input {
    float: left;
  }
  a {
    border: 1px solid $col-bordergrey;
    text-decoration: none;
    display: block;
    width: 36px;
    height: 32px;
    color: $col-black;
    @include font(17);
    line-height: 32px;
  }
  input {
    border-top: 1px solid $col-bordergrey !important;
    border-bottom: 1px solid $col-bordergrey !important;
    width:60px !important;
    height: 32px;
    text-align: center;
    border-left: none !important;
    border-right: none !important;
    @include font(14);
  }
}

.inline-form {
  .text, .submit {display: block;}
  .text {
    width: 100%;
    margin-bottom: 12px;
    input {
      color: $col-grey;
    }
  }
  .submit {
    width: 100%;
    input {
      margin-left: 0
    }
  }
  @include breakpoint(medium) {
    .text {
      float: left;
      width: calc(100% - 130px);
      margin-bottom: 0;
    }
    .submit {
      float: right;
      width: 120px;
      input {
        width: 120px;
      }
    }
  }
}

/* PAGINATION */
.pagination {
    float: right;
    text-transform: uppercase;
    li {
      display: inline-block;
      &.prev:after,
      &.next:before {
        content: '|';
        padding: 0  $baseline/2;
      }
      &.spacing {
        padding: 0 10px;
      }
      &.active {
        color: $col-grey;
      }
    }
}

/* BREADCRUMBS */
.breadcrumbs {
  text-transform:uppercase;
  a {
    &:after {
      content: '|';
          padding: 0  $baseline/2;
    }
    &:last-child:after {
      content: '';
    }
  }
}

.full-page-banner {
  position: relative;
  .caption {
    text-align: center;
    @include centre;
    padding: 0 20px;
    width: 100%;
    h1, span {
      color: $col-white;
    }
    h1 {
      @include font(42);
      position: relative;
      padding-bottom: 10px;
      margin-bottom: 10px;
      @include breakpoint(small) {
        @include font(60);
        padding-bottom: 20px;
        margin-bottom: 20px;
      }
      @include breakpoint(medium) {
        @include font(70);
      }
      &:after {
        content: '';
        width: 80px;
        height: 5px;
        background: $col-white;
        @include centre(x);
        bottom: 0;
      }
    }
    span {
      display: block;
      @include font(20);
      @include breakpoint(small) {
        @include font(32);
      }
      @include breakpoint(medium) {
        @include font(44);
      }
    }
  }
}


/* SLIDER */
.flex-direction-nav a.flex-prev  { background-image:url({{ 'leftarrow.png' | asset_url }}); display: block; text-indent: -999999px}
.flex-direction-nav a.flex-next  { background-image:url({{ 'rightarrow.png' | asset_url }}); display:block; text-indent: 999999px}

/* HEADER */
header.global-header {
  background: $col-black;
  z-index: 7000;
  height: 70px;
  @include breakpoint(large) {
    background: rgba(0,0,0,.6);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    //height: auto;
  }
  .site-logo {
    display: block;
    width: 156px;
    float: left;
    margin-right: 24px;
    padding-top: 24px;
  }
  .nav-wrapper {
    position: absolute;
    top: 70px;
    right: 0;
    left: 0;
    background: $col-black;
    z-index: 7000;
    padding: 12px 30px;
    @extend .cf;
    display: none;
    @include breakpoint(large) {
      position: static;
      display: block;
      background: transparent;
      padding: 0;
    }
  }
  nav {
    @include breakpoint(large) {
      float: left;
    }
  }
  #header_meta {
    @include breakpoint(large) {
      float: right;
    }
  }
  .nav-links {
    & > li {
      display: block;
      position: relative;
      margin-bottom: 12px;
      @include breakpoint(large) {
        display: inline-block;
        margin-right: 12px;
        margin-bottom: 0;
      }
      &.cart-nav-item {
        a {
          &:before {
            content: '';
            background-image: url(cart.png);
            background-repeat: no-repeat;
            background-size: 13px 11px;
            width: 13px;
            height: 11px;
            display: inline-block;
            margin-right: 4px;
          }
        }
      }
      &.search-nav-item {
        a {
          &:before {
            content: '';
            background-image: url(search.png);
            background-repeat: no-repeat;
            background-size: 11px 11px;
            width: 11px;
            height: 11px;
            display: inline-block;
          }
        }
      }
      &.active a {
        color: $col-links-primary;
      }
      & > a {
        text-transform: uppercase;
        text-decoration: none;
        display: block;
        color: $col-white;
        @include font(14);
        @extend .lato-black;
        @include breakpoint(large) {
          line-height: 74px;
        }
        &:hover {
          color: $col-links-primary;
        }
        .header-arrow {
          display: none;
          @include breakpoint(large) {
            display: inline-block;
          }
        }
      }
      &:hover {
        .sub-nav {
          @include breakpoint(large) {
            display: block;
          }
        }
      }
      .sub-nav {
        @include breakpoint(large) {
          display: none;
          position: absolute;
          top: 70px;
          left: -12px;
          min-width: 200px;
          background: rgba(0,0,0,.6);
          padding: 4px 12px 12px 12px;
        }
        li {
          a {
            color: $col-white;
            font-weight:400;
            text-decoration: none;
            //text-transform: uppercase;
            @include font(14);
            text-indent: 12px;
            @extend .lato-thin;
            line-height: 20px;
            &:hover {
              color: $col-links-primary;
            }
          }
        }
      }
    }
  }
}


/* CURRENCIES */
.currency-nav-item {
  position: relative;
  .selected-currency {
    color: $col-white;
    &:hover {
      cursor: pointer;
    }
  }
  .currency-selector-wrapper {
    display: none;
    position: absolute;
    top: 70px;
    background: rgba(0,0,0,.6);
    left: -40px;
    padding: 6px 40px 16px 40px;
    a {
      color: $col-white;
      text-decoration: none;
      @include font(12);
      @extend .lato-thin;
    }
  }
}



/* MAIN */
main.global-site {
  padding-bottom: 60px;
  &.index {
    padding-bottom: 0;
  }
  &.header-push {
    padding-top: 120px;
  }
}

/* Home Page */
#home {
  .home_slider-area {
    .slides {
      li {
        ul {
          li {
            text-align: center;
            .home_slider-area-slide {
              padding: 0 20px;
              &:hover {
                h2 a, p {
                  color: $col-lightblack;
                }
                h2:after {
                  background: $col-lightblack;
                }
              }
              h2 {
                &:after {
                  -webkit-transition: all, .6s ease;
                  -moz-transition: all, .6s ease;
                  -o-transition: all, .6s ease;
                  transition: all, .6s ease;
                }
                a {
                  color: $col-black;
                  text-decoration: none;
                  -webkit-transition: all, .6s ease;
                  -moz-transition: all, .6s ease;
                  -o-transition: all, .6s ease;
                  transition: all, .6s ease;
                }
              }
              img {
                margin-bottom: 12px;
              }
              p {
                @extend .lato-thin;
              }
            }
          }
        }
      }
    }
  }
  .home_promo-text {
    max-width: 600px;
    margin: 40px auto;
    padding: 0 20px;
    @include breakpoint(medium) {
      margin: 100px auto;
    }
    span {
      display: block;
      @include font(20);
      @extend .lato-thin;
      @include breakpoint(small) {
        @include font(30);
      }
      @include breakpoint(medium) {
        @include font(40);
      }
    }
  }
  .home_collection {
    .featured-product {
      width: 100%;
      margin-top: 80px;
      .featured-product-right {
        text-align: center;
        @include breakpoint(medium) {
          text-align: left;
        }
        .line {
          height: 5px;
          width: 70px;
          background: $col-black;
          margin: 14px 0 0 -35px;
          left: 50%;
          position: relative;
          display: block;
          @include breakpoint(medium) {
            margin: 14px 0 0 0;
            left: 0;
          }
        }
        p {
          @extend .lato-thin;
        }
      }
    }
  }
}

/* COLLECTION PAGE */
.collection-filters-wrapper {
  margin: 40px 0;
  .filters-header {
    background: $col-lightgrey;
    width: 100%;
    border-top: 1px solid $col-bordergrey;
    border-right: 1px solid $col-bordergrey;
    border-bottom: 4px solid $col-darkgrey;

    .filters-header-inner {
      @extend .cf;
      .filters-header-toggle {
        @include breakpoint(large) {
          float: left;
          height: 44px;
        }
        a {
          display: inline-block;
          padding: 12px;
          color: $col-white;
          text-decoration: none;
          background: $col-darkgrey;
          height: 44px;
        }
        span {
          padding-left: 12px;
        }
      }
      .filters-header-options {
        @extend .cf;
        float: right;
        @include breakpoint(large) {
          float: right;
        }
        .filters-switch-view {
          float: left;
          @extend .cf;
          margin-right: 12px;
          a {
            width: 44px;
            height: 44px;
            float: left;
            background-size: 114px 99px;
            border-right: 1px solid $col-bordergrey;
            transition: none;
            &.filter_grid {
              border-left: 1px solid $col-bordergrey;
              background-position: 0 -51px;
              &.active {
                background-position: 0 -1px;
              }
            }
            &.filter_list {
              background-position: -47px -1px;
              &.active {
                background-position: -47px -51px;
              }
            }
          }
        }
        .collection-paginate {
          float: right;
          margin: 5px 6px 0 0;
        }
      }
    }
  }
  .collection-filters {
    width: 100%;
    display: none;
    @include breakpoint(large) {
      //display: table;
      table-layout: fixed;
    }
    .filters-inner {
      width: 100%;
      @include breakpoint(large) {
        display: table-row;
      }
      .filter-group {
        padding: 12px;
        border-right: 1px solid $col-bordergrey;
        border-bottom: 1px solid $col-bordergrey;
        border-left: 1px solid $col-bordergrey;
        @extend .cf;
        @include breakpoint(large) {
          display: table-cell;
          width: 20%;
          border-left: none;
        }
        &:first-child {
          border-left: 1px solid $col-bordergrey;
        }
        label {
          float: left;
          width: 50%;
          margin-bottom: 12px;
          text-transform: none;
          color: $col-black;
          @include font(13);
          input {
            width: auto;
          }
          img {
            &.active {
              box-shadow: 2px 2px 1px 1px rgba(0,0,0,.2);
            }
          }
        }
        &.hide-input {
          label {
            width: auto;
            margin-right: 4px;
            &:hover {
              cursor: pointer;
            }
            input {
              position: absolute;
              left: -999999px;
              visibility: hidden;
              display: none;
            }
          }
        }
      }
    }
  }
}

.filters-switch-view {
  a {
    &.active {
      color: green;
    }
  }
  .filter_grid {

  }
  .filter_list {

  }
}
