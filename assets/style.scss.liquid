      #add-to-cart {
        float: left;
        background: $col-yellow;
        border-radius: 20px;
        padding: 0 40px;
        color: $col-white;
        text-decoration: none;
        display: inline-block;
        text-transform: uppercase;
        @include font(13);
        line-height: 34px;
      }
    }
  }
  .wishlist-wrapper {
    margin-top: 24px;
    border-top: 1px solid $col-bordergrey;
    border-bottom: 1px solid $col-bordergrey;
    padding: 12px 0;
    .wishlist {
      color: $col-black;
      text-decoration: none;
      @include font(12);
    }
    .wish-error {
      margin-top: 4px;
      margin-bottom: 0;
    }
  }

  .product-accordion {
    @extend .cf;
    margin-top: 60px;
    border: 1px solid $col-bordergrey;
    .accordion-headers {
      float: left;
      width: 300px;
      border-right: 1px solid $col-bordergrey;
      li {
        a {
          background: $col-lightgrey;
          text-decoration: none;
          text-transform: uppercase;
          display: block;
          padding: 12px;
          color: $col-black;
          border-bottom: 1px solid $col-bordergrey;
          @extend .lato-black;
          &.active {
            background: $col-white;
            color: $col-yellow;
          }
        }
        &:last-child {
          a {
            border-bottom: none;
          }
        }
      }
    }
    .accordion-content {
      float: right;
      width: calc(100% - 300px);
      padding: 20px;
      li {
        display: none;
        &:first-child {
