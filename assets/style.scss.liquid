/* BURGER */
.burger {
  display: block;
  position: absolute;
  top: 23px;
  right: 20px;
  width:18px;
  height:18px;
  z-index: 7000;
  @include breakpoint(large) {
    display: none;
  }
  i {
    position: relative;
    display: inline-block;
    width: 18px;
    height: 3px;
    color: $col-white;
    font:bold 14px/.4 Helvetica;
    text-transform: uppercase;
    text-indent:-55px;
    background: $col-white;
    transition:all .2s ease-out;
    &:before, &:after {
      content:'';
      width: 18px;
      height: 3px;
      background: $col-white;
      position: absolute;
      left:0;
      transition:all .2s ease-out;
    }
    &:before {
      top: -7px;
    }
    &:after {
      bottom: -7px;
    }
  }
  &.active {
    i {
      &:before, &:after {
        background: $col-white;
      }
      background: transparent;
      &:before {
        top:0;
        -webkit-transform: rotateZ(45deg);
           -moz-transform: rotateZ(45deg);
            -ms-transform: rotateZ(45deg);
             -o-transform: rotateZ(45deg);
                transform: rotateZ(45deg);
      }
      &:after {
        bottom:0;
        -webkit-transform: rotateZ(-45deg);
        -moz-transform: rotateZ(-45deg);
        -ms-transform: rotateZ(-45deg);
        -o-transform: rotateZ(-45deg);
        transform: rotateZ(-45deg);
      }
    }
  }
}

