/* COLLECTION PAGE */
.collection-filters-wrapper {
  margin: 40px 0;
  .filters-header {
    background: $col-lightgrey;
    width: 100%;
    border-top: 1px solid $col-bordergrey;
    border-right: 1px solid $col-bordergrey;
    border-bottom: 4px solid $col-darkgrey;

    .filters-header-inner {
      @extend .cf;
      .filters-header-toggle {
        float: left;
        a {
          display: inline-block;
          padding: 12px;
          color: $col-white;
          text-decoration: none;
          background: $col-darkgrey;
        }
        span {
          padding-left: 12px;
        }
      }
      .filters-header-options {
        @extend .cf;
        float: right;
        .filters-switch-view {
          float: left;
          @extend .cf;
          margin-right: 12px;
          a {
            width: 44px;
            height: 44px;
            float: left;
            background-size: 114px 99px;
            border-right: 1px solid $col-bordergrey;
            transition: none;
            &.filter_grid {
              border-left: 1px solid $col-bordergrey;
              background-position: 0 -51px;
              &.active {
                background-position: 0 -1px;
              }
            }
            &.filter_list {
              background-position: -47px -1px;
              &.active {
                background-position: -47px -51px;
              }
            }
          }
        }
        .collection-paginate {
          float: right;
          margin: 5px 6px 0 0;
        }
      }
    }
  }
  .collection-filters {
    display: table;
    table-layout: fixed;
    width: 100%;
    .filters-inner {
      display: table-row;
      width: 100%;
      .filter-group {
        display: table-cell;
        width: 25%;
        padding: 12px;
        border-right: 1px solid $col-bordergrey;
        border-bottom: 1px solid $col-bordergrey;
        @extend .cf;
        &:first-child {
          border-left: 1px solid $col-bordergrey;
        }
        label {
          float: left;
          width: 50%;
          margin-bottom: 12px;
          text-transform: none;
          color: $col-black;
          @include font(13);
          input {
            width: auto;
          }
        }
      }
    }
  }
}

.filters-switch-view {
  a {
    &.active {
      color: green;
    }
  }
  .filter_grid {

  }
  .filter_list {

  }
}
.collection-listing {
  .collection-item {
    &.filter_grid {
      .prod-image-wrap {
        img {
          @extend .img-full;
        }
      }
      .prod-caption {
        position: relative;
        .quickview-link {
          background-size: 22px 22px;
          width: 22px;
          height: 22px;
          position: absolute;
          right: 0;
          top: -20px;
          display: block;
          background-position: 0 0;
          background-repeat: no-repeat;
          background-image: url(plus.png);
        }
