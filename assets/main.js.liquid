  // Increment buttons on cart page
  var $minus 	= $('.incrementors .minus'),
      $plus  	= $('.incrementors .plus');
  $minus.click( function() {
    var $numinput = $(this).next('.number');
    if ($numinput.val() > 0) {
		$numinput.val( parseInt( $numinput.val(), 10 ) -1 );
    }
  });
  $plus.click( function() {
    var $numinput = $(this).prev('.number');
	$numinput.val( parseInt( $numinput.val(), 10 ) +1 );
  });

  // Currency Switcher
  var pageloadCurrency = $('.currency-select.selected').html();
  $('#selected-currency').append(pageloadCurrency);
  $('.currency-select').click(function() {
    var activeCurrency = $('.currency-select.selected').html();
